#version 420

layout (binding = 0) uniform sampler2DArray color_tex;
layout (binding = 1) uniform sampler2DArray depth_tex;

in vec2 texcoord_fs;

uniform int img;

out layout(location = 0) vec4 frag_color;

void main()
{
	frag_color = texture(color_tex, vec3(texcoord_fs,img));
	gl_FragDepth = texture(depth_tex, vec3(texcoord_fs,img)).r;
	gl_FragDepth =0.3;
}